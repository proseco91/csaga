            </div>
            <div class="eff_7mau">
                
                <a href="<%=Lib.urlhome%>"><div style="background-color: #e62e1b;">Trang chủ</div></a>
                <a href="<%=Lib.urlhome+"/"+(Lib.getLag().Equals("vi-VN")?"vi":"en")+"/tintuc-sukien.htm" %>"><div style="background-color: #f89201;">Tin tức & Sự kiện</div></a>
                <a href="<%=Lib.urlhome+"/"+(Lib.getLag().Equals("vi-VN")?"vi":"en")+"/thuvien.htm" %>"><div style="background-color: #f8e900;">Thư viện</div></a>
                <a href="<%=Lib.urlhome+"/"+(Lib.getLag().Equals("vi-VN")?"vi":"en")+"/hinh-anh-cong-dong.htm" %>"><div style="background-color: #3cc061;">Tôi là nữ yêu nữ</div></a>
                <a href="<%=Lib.urlhome+"/"+(Lib.getLag().Equals("vi-VN")?"vi":"en")+"/nhom-nu-yeu-nu.htm" %>"><div style="background-color: #3996d3;">Kết nối</div></a>
                <a href="<%=Lib.urlhome+"/"+(Lib.getLag().Equals("vi-VN")?"vi":"en")+"/hotro.htm" %>"><div style="background-color: #ae4bce;">Alo tôi nghe</div></a>
                <a href="<%=Lib.urlhome+"/"+(Lib.getLag().Equals("vi-VN")?"vi":"en")+"/lien-he.htm" %>"><div style="background-color: #dc3473;width: 172px;position: absolute;right: 0px;">Liên hệ</div></a>
                
            </div>
            <div style="clear:both;"></div>
            <div class="banner" valindex="0">
                <div class="banner_content">
                    <%foreach (var item in sql.getSettingWeb().Banner.Split(',').Select((value, index) => new { value,index }))
                      {%>
                    <div class="item_banner" style="background-image: url('<%=Lib.urlhome%>/Images/imageUpload/<%=item.value%>');" valindex="<%=item.index %>"></div>
                    <%}%>
                </div>
                <div class="banner_index">
                    <span  class="banner_index_span">
                        <%foreach (var item in sql.getSettingWeb().Banner.Split(',').Select((value, index) => new { value,index }))
                          {%>
                        <span valindex="<%=item.index %>"></span>
                        <%}%>
                    </span>
                </div>
            </div>
        </div>


        <asp:ContentPlaceHolder ID="Body" runat="server">
        </asp:ContentPlaceHolder>

        <div class="bottom">
            <%--<div class="bottom_line">
                <div class="panel_1k" style="position: relative;">
                    <div class="bottom_btn_tuvan" title="Đang kết nối"></div>
                </div>
            </div>--%>
            <div class="bottom_center">
